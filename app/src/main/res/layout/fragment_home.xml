<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="br.com.agendaodonto.fragments.HomeFragment">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Logar Device Id ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_id_button"
                style="@style/Widget.AppCompat.Button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:text="Atualizar ID no Server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_id_button"
                style="@style/Widget.AppCompat.Button"
                app:layout_constraintTop_toBottomOf="@id/log_id_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <Button
                android:text="Logar mensagens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/log_db"
                style="@style/Widget.AppCompat.Button"
                app:layout_constraintTop_toBottomOf="@id/update_id_button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
